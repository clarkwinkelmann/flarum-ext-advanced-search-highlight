{
    "name": "clarkwinkelmann/flarum-ext-advanced-search-highlight",
    "description": "Highlight search results in HTML post content and partial Meilisearch hits.",
    "keywords": [
        "flarum",
        "search",
        "highlight"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "flarum/core": "^1.2"
    },
    "suggest": {
        "clarkwinkelmann/flarum-ext-post-stream-search": "*",
        "clarkwinkelmann/flarum-ext-scout": "*"
    },
    "authors": [
        {
            "name": "Clark Winkelmann",
            "homepage": "https://clarkwinkelmann.com/",
            "email": "clark.winkelmann@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/clarkwinkelmann/flarum-ext-advanced-search-highlight"
    },
    "autoload": {
        "psr-4": {
            "ClarkWinkelmann\\AdvancedSearchHighlight\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Advanced Search Highlight",
            "category": "feature",
            "icon": {
                "name": "fas fa-search",
                "backgroundColor": "#684ba6",
                "color": "#fff"
            }
        }
    }
}
